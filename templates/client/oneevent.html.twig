{% extends 'baseclient.html.twig' %}
{% block body %}


                       
 
 <section class="tours spad">
        <div class="container">
            <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;margin-bottom: 50px;">
           
        
           
                <div class="col-lg-6 order-lg-1">
                    <div class="tours__item__text">
                        <h2>{{ b.Nom }}</h2>
                        <div class="tours__item__pic">
                        <img src="{{ b.affiche }}">
                    </div>
                        <div class="tours__text__widget">
                            <ul>
                                <li>
                                    <i class="fa fa-clock-o"></i>
                                    
                                    <span>{{ b.date|date('Y-m-d') }}</span>
                                </li>
                                <li>
                                    <i class="fa fa-map-marker"></i>
                                   {{ b.Lieu }}
                                </li>
                            </ul>
                            <div class="price">{{ b.prix }} DT </div>
                        </div>
                        
                        
                        <a href="{{ path('eventpage',{'id':b.id}) }}" class="primary-btn border-btn">Acheter tickets</a>
                    </div>
                </div>
                
                
        
               
        </div>
         </div>

<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

    <div class="col-lg-6">

        <div class="card">
            <div class="card-body">
            

                <!-- Table with stripped rows -->
                <table class="table table-striped">
                    <thead>
                    <tr>     <th>Commentaire</th>
                        
                        
                 
                    </tr>
                    </thead>
                    <tbody>
                    {% for com in c %}
                        <tr>
                            <td>{{ com.Texte }}</td>
                          
                            
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                <!-- End small tables -->

            </div>
        </div>

    </div>
        </div>
 <div  style="display: flex;align-items: center;justify-content: center; padding: 10px;margin-bottom: 500px;">


          <div class="card">
            <div class="card-body">
            <div class="row mb-3">
            
            <div style="margin-bottom: 10px;">
              <h6><font color="green">Commentaire </font></h6>
            </div>
              
                 {{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-3 col-form-label">Commentaire</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.texte,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-3 col-form-label">User</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.id_utilisateur,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="inputText" class="col-sm-3 col-form-label">event</label>
                  <div class="col-sm-9">
                    {{ form_widget(form.id_evenement,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  
                  <div class="col-sm-10">
                    {{ form_widget(form.commenter,{'attr':{'class':'btn btn-primary'}}) }}
                  </div>
                </div>

                {{ form_end(form) }}

            </div>
          </div>

        </div>
        </section>

 {% endblock %}
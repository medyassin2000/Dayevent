{% extends 'baseclient.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        
        label {
            color: black;
        }
    </style>
{% endblock %}
{% block body %}
<h1>Sign up</h1>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    
    
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            
            <div class="col-lg-12 col-xl-11">
                
                
                    <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.nom, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.prenom, {'label': 'Prénom', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.telephone, {'label': 'Téléphone', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.password, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.roles, {'label': 'Rôle', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(registrationForm.datenaiss, {'label': 'Date de naissance', 'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            
                            

                        <div class="">
                            </a><button class="btn float-right {{ button_color|default('btn btn-primary btn-lg') }}  mt-3">{{ button_label|default('Register') }}</button>
                        </div>

                        {{ form_end(registrationForm) }}

                    </div>
                    

                    </div>
                    </div>
                
                
            </div>
            
        </div>
    </section>
{% endblock %}
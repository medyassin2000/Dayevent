
{% extends 'base.html.twig' %}

{% block body %}
   <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">


          <div class="card">
            <div class="card-body">
            <div class="row mb-3">
            <div style="margin-top: 20px;display: flex;align-items: End;" >
                   <a href="{{ path('send_email') }}"><i class="button" style="font-size: 20px;">Suivre Events</i></a>
                  </div>
                </div>
            <div>
              <h5 class="card-title">Infos Generales</h5>
              <h6><font color="green">Entrer les details de votre annonce </font></h6>
            </div>
              
                 {{ form_start(f,{'attr': {'novalidate':'novalidate'}}) }}
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-3 col-form-label">Nom d'event</label>
                  <div class="col-sm-9">
                    {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputDate" class="col-sm-3 col-form-label">Date</label>
                  <div class="col-sm-9">
                    {{ form_widget(f.date,{'attr':{'class':'form-control'}}) }}
                  </div>
                  </div>
                  <div class="row mb-3">
                  <label for="inputText" class="col-sm-3 col-form-label">Lieu</label>
                  <div class="col-sm-9">
                    {{ form_widget(f.lieu,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-3 col-form-label">Prix Ticket</label>
                  <div class="col-sm-9">
                   {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}
                  </div>
                  </div>
                  <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-3 col-form-label">Nombre Ticket</label>
                  <div class="col-sm-9">
                    {{ form_widget(f.nb_ticket,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
                </div>
                
                <div class="row mb-3">
                  <label for="inputNumber" class="col-sm-4 col-form-label">Choisir l'affiche</label>
                  <div class="col-sm-7">
                 {{ form_widget(f.affiche,{'attr':{'class':'form-control'}}) }}
                  </div>
                </div>
               
                <div class="row mb-3">
                  
                  <div class="col-sm-10">
                    {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                  </div>
                </div>

                {{ form_end(f) }}

            </div>
          </div>

        </div>

{% endblock %}
{% extends 'back.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>La table des Reclamations :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdRec</th>
                <th>DateRec</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.idRec }}</td>
                <td>{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.titre }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.tel }}</td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'idRec': reclamation.idRec}) }}">show</a>
                    <a href="{{ path('app_reclamation_edit', {'idRec': reclamation.idRec}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}">Create new</a>
     <button id="pdf-button" type="button" class="btn btn-save1">{{ button_label|default('PDF') }}</button>

<script>
  var pdfButton = document.getElementById("pdf-button");
  pdfButton.addEventListener("click", function() {
    var xhr = new XMLHttpRequest();
    xhr.open("GET", "/generate-pdf", true);
    xhr.responseType = "blob";
    xhr.onload = function() {
      if (this.status === 200) {
        var blob = new Blob([this.response], { type: "application/pdf" });
        var link = document.createElement("a");
        link.href = window.URL.createObjectURL(blob);
        link.download = "document.pdf";
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      }
    };
    xhr.send();
  });
</script>
{% endblock %}
